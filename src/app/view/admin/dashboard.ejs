<div class="container-fluid" style="height: 100%">
    <div class="row h-100">
        <div class="col-2" id="block_dashboard" style="position: fixed">
                <div id="header_dashboard">
                        <div id="title_dashboard">ATN</div>
                    </div>
                    <div id="body_dashboard">
                        <% if(role === '1') {%>
                            <div class="controller-in-dashboard <% if(page === "dashboard"){ %>active <%}%>"  data-page="dashboard"><i class="bi-house"></i> Dashboard </div>
                            <div class="controller-in-dashboard <% if(page === "product"){ %>active <%}%>"  data-page="product"><i class="bi-slack"></i> Product </div>
                            <div class="controller-in-dashboard <% if(page === "category"){ %>active <%}%>"  data-page="category"><i class="bi-tags"></i> Category </div>
                            <div class="controller-in-dashboard <% if(page === "supplier"){ %>active <%}%>"  data-page="supplier"><i class="bi-skype"></i> Supplier </div>
                            <div class="controller-in-dashboard <% if(page === "statistical"){ %>active <%}%>"  data-page="statistical"><i class="bi-bar-chart-line"></i> Statistical </div>
                        <% } else {%>
                            <div class="controller-in-dashboard <% if(page === "dashboard"){ %>active <%}%>" data-page="supper-admin"><i class="bi-speedometer2"></i> Dashboard </div>
                            <div class="controller-in-dashboard <% if(page === "shopManagement"){ %>active <%}%>"  data-page="supper-admin/shop/management"><i class="bi-shop"></i> Shops </div>
                            <div class="controller-in-dashboard <% if(page === "staffManagement"){ %>active <%}%>"  data-page="supper-admin/staff/management"><i class="bi-people"></i> Staff </div>
