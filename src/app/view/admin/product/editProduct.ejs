<div style="text-align: center">
    <h1 class="mt-3">Update product</h1>
</div>
<div class="add-form mt-5 col-sm-11">
    <form action="/product/edit" method="POST" id="pro_form">
        <input type="hidden" value="<%= pro[0].pro_id %>" name="proId">
        <div class="mb-3">
            <label for="pro_name" class="form-label">Name</label>
            <input type="text" class="form-control" id="pro_name" placeholder="product name" name="proName" value="<%= pro[0].pro_name %>">
        </div>
        <div class="mb-3">
            <label for="pro_name" class="form-label">Category</label>
            <select class="form-control" name="proCate" id="">
                <% for (let i=0;i < cateList.length;i++) {%>
                    <option value="<%= cateList[i].cate_id %>" <%if(cateList[i].sup_id === pro[0].cate_id){%>selected<%}%> ><%= cateList[i].cate_name %></option>
                <% }%>
            </select>
        </div>
        <div class="mb-3">
            <label for="pro_name" class="form-label">Supplier</label>
            <select class="form-control" name="proSup" id="">
                <% for (let i=0;i < supList.length;i++) {%>
                    <option value="<%= supList[i].sup_id %>" <%if(supList[i].sup_id === pro[0].sup_id){%>selected<%}%> ><%= supList[i].sup_name %></option>
                <% }%>
            </select>
        </div>
        <div class="mb-3">
            <label for="pro_name" class="form-label">Price</label>
            <input type="number"  name="proPrice"class="form-control" id="pro_name" placeholder="product price" value="<%= pro[0].pro_price.substring(1) %>">
        </div>
        <div class="mb-3">
            <label for="pro_name" class="form-label">Inventory</label>
            <input type="number" class="form-control" id="pro_name" name="inventory" placeholder="inventory" value="<%= pro[0].inventory %>">
        </div>
        <div class="mb-3">
            <label for="img_preview" class="form-label">Image</label>
            <div style="display: block">
                <img src="/images/product/<%= pro[0].pro_image %>" alt="..." class="img-thumbnail" id="img_preview" style="width: 13rem;">
            </div>
            <input type="file" name="proImage" id="pro_img" hidden>
            <button type="button" class="btn btn-primary mt-3" id="btn_open_dialog_image">Choose image</button>
        </div>
        <div style="text-align: end">
            <input type="submit" class="btn btn-success" id="btn_submit_product" value="Update">
            <a href="/product"><input type="button" class="btn btn-warning" value="cancel"></a>
        </div>
    </form>
</div>
