<div style="text-align: center">
    <h1 class="mt-3">Add new product</h1>
</div>
<div class="add-form mt-5 col-sm-11">
    <form action="/product/add" method="POST" id="pro_form">
        <div class="mb-4">
            <label for="pro_name" class="form-label">Name</label>
            <input type="text" name="proName" class="form-control" id="pro_name" placeholder="product name" style="display: inline-block">
            <span id="empty_name" class="bi-x-circle-fill" style="vertical-align: -webkit-baseline-middle; color: red; display: none; position: absolute; margin-left: 1rem"></span>
        </div>
        <div class="mb-4">
            <label for="pro_cate" class="form-label">Category</label>
            <select class="form-control" name="proCate" id="pro_cate" style="display: inline-block">
                    <option value="">Choose category</option>
                <% for (let i=0;i < cateList.length;i++) {%>
                    <option value="<%= cateList[i].cate_id %>"><%= cateList[i].cate_name %></option>
                <% }%>
            </select>
            <span id="empty_cate" class="bi-x-circle-fill" style="vertical-align: -webkit-baseline-middle; color: red; display: none; position: absolute; margin-left: 1rem"></span>
        </div>
        <div class="mb-4">
            <label for="pro_sup" class="form-label">Supplier</label>
            <select class="form-control" name="proSup" id="pro_sup" style="display: inline-block">
                <option value="">Choose supplier</option>
                <% for (let i=0;i < supList.length;i++) {%>
                    <option value="<%= supList[i].sup_id %>"><%= supList[i].sup_name %></option>
                <% }%>
            </select>
            <span id="empty_sup" class="bi-x-circle-fill" style="vertical-align: -webkit-baseline-middle; color: red; display: none; position: absolute; margin-left: 1rem"></span>
        </div>
        <div class="mb-4">
            <label for="pro_price" class="form-label">Price</label>
            <input type="number" name="proPrice" class="form-control" id="pro_price" placeholder="price" style="display: inline-block">
            <span id="empty_price" class="bi-x-circle-fill" style="vertical-align: -webkit-baseline-middle; color: red; display: none; position: absolute; margin-left: 1rem"></span>
        </div>
        <div class="mb-4">
            <label for="pro_quantity" class="form-label">Inventory</label>
            <input type="number" name="inventory" class="form-control" id="pro_quantity" placeholder="quantity" style="display: inline-block">
            <span id="empty_quantity" class="bi-x-circle-fill" style="vertical-align: -webkit-baseline-middle; color: red; display: none; position: absolute; margin-left: 1rem"></span>
        </div>
        <div class="mb-4">
            <label for="img_preview" class="form-label">Image</label>
            <div style="display: block">
                <img src="/images/decoration/image-product.png" alt="..." class="img-thumbnail" id="img_preview" style="width: 13rem;" >
            </div>
            <input type="file" name="proImage" id="pro_img" hidden>
            <button type="button" class="btn btn-primary mt-3" id="btn_open_dialog_image">Choose image</button>
            <span id="empty_img" class="bi-x-circle-fill" style="vertical-align: -webkit-baseline-middle; color: red; display: none; position: absolute; margin-left: 1rem"></span>
        </div>
        <div style="text-align: end">
            <input type="submit" class="btn btn-success" id="btn_submit_product" value="Add">
            <a href="/product"><input type="button" class="btn btn-warning" value="cancel"></a>
        </div>
    </form>
</div>