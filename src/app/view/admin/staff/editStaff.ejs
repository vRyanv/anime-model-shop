<div style="text-align: center">
    <h1 class="mt-3">Edit staff</h1>
</div>
<div class="add-form mt-5 col-sm-11">
    <div class="mb-3">
        <label for="txt_full_name" class="form-label">Full name</label>
        <input type="text" class="form-control" id="txt_full_name" name="fullName" placeholder="full name" value="<%= staff[0].fullname %>" readonly>
    </div>
    <div class="mb-3">
        <label for="txt_phone" class="form-label">Phone</label>
        <input type="text" class="form-control" id="txt_phone" name="phone" placeholder="phone" value="<%= staff[0].phone %>" readonly>
    </div>
    <div class="mb-3">
        <label for="txt_phone" class="form-label">Owner shop</label>
        <select class="form-control" name="ownerShop" id="owner_shop">
            <% for (let i = 0; i < shopList.length;i++) {%>
                <option value="<%= shopList[i].shop_id %>" <%if(shopList[i].shop_id === staff.shop_id){%> selected<%}%> ><%= shopList[i].shop_name %></option>
            <%}%>
        </select>
    </div>
    <div style="text-align: end">
        <input type="submit" class="btn btn-success" value="Update" id="btn_submit_add_staff">
        <a href="/supper-admin/shop/management"><input type="button" class="btn btn-warning" value="cancel"></a>
    </div>
</div>