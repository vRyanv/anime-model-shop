<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" href="assets/images/decoration/icon-web.png">
    <title>Cart</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
          rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
          crossorigin="anonymous">
    <link href="/assets/css/loadingAnimation.css" rel="stylesheet">
</head>
<body>
<!--    animation loading-->
<div class="canvas-animation">
    <div class="lds-grid">
        <div></div><div></div><div></div><div></div><div></div>
        <div></div><div></div><div></div><div></div>
    </div>
</div>
<!--    animation loading-->
<div class="container">
    <div class="row">
        <div class="col-12" style="background-color: rgb(102, 95, 170); text-align: center">
            <h1 style="color: whitesmoke; display: inline-block; float: left">Cart</h1>
            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#staticBackdrop" style="margin-top: .5rem; float: right">
                Payment
            </button>
            <a href="/shop"><button type="button" class="btn btn-primary"  style="margin-top: .5rem; float: right; margin-right: 1rem">
                Shop
            </button></a>
        </div>
    </div>
    <div class="row">
        <div class="col" style="">
                <table class="table table-hover pt-10">
                    <thead>
                    <tr style="text-align: center">
                        <th scope="col">#</th>
                        <th scope="col">Image</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Total price</th>
                        <th scope="col">Action</th>
                    </tr>
                    </thead>
                    <tbody style="text-align: center">
                    <% for (let i=0; i< cartList.length;i++){ %>
                        <tr>
                            <th scope="row"><%= i + 1%></th>
                            <th scope="row">
                                <img style="width: 5rem; height: 5rem" src="/images/product/<%= cartList[i].pro_image %>" alt="">
                            </th>
                            <td><%= cartList[i].pro_name %></td>
                            <td><%= cartList[i].pro_price %></td>
                            <td>
                                <div class="btn-group" role="group" aria-label="Basic example">
                                    <button type="button" class="btn btn-secondary" data-pro-id="<%= cartList[i].pro_id %>">-</button>
                                    <input type="text" style="text-align: center; vertical-align: middle; width: 3rem; border: none" value="<%= cartList[i].quantity %>" readonly>
                                    <button type="button" class="btn btn-info" data-pro-id="<%= cartList[i].pro_id %>">+</button>
                                </div>
                            </td>
                            <td><%= cartList[i].price %></td>
                            <td>
                                <button type="button" class="btn btn-warning" data-pro-id="<%= cartList[i].pro_id %>">Delete</button>
                            </td>
                        </tr>
                    <% } %>
                    </tbody>
                </table>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Place order form</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="col mb-5">
                    <table class="table table-hover pt-10">
                        <thead>
                        <tr>
                            <th scope="col" colspan="3" style="text-align: center">Information Order</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td><h6>Order date</h6></td>
                            <td>Order date</td>
                        </tr>
                        <tr>
                            <td><h6>Delivery date</h6></td>
                            <td>Delivery date</td>
                        </tr>
                        <tr>
                            <td><h6>Delivery address</h6></td>
                            <td>Delivery address</td>
                        </tr>
                        <tr>
                            <td><h6>Total product price</h6></td>
                            <td>total product price</td>
                        </tr>
                        <tr>
                            <td><h6>Total delivery price</h6></td>
                            <td>total delivery price</td>
                        </tr>
                        <tr>
                            <td><h6>Total payment</h6></td>
                            <td>$123.123</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success">Place order</button>
            </div>
        </div>
    </div>
</div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<script src="https://code.jquery.com/jquery-3.6.1.min.js" integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>
</html>
