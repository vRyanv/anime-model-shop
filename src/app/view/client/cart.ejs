<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Cart</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
          rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
          crossorigin="anonymous">
    <link href="/assets/css/loadingAnimation.css" rel="stylesheet">
</head>
<body>
<!--    animation loading-->
<div class="canvas-animation">
    <div class="lds-grid">
        <div></div><div></div><div></div><div></div><div></div>
        <div></div><div></div><div></div><div></div>
    </div>
</div>
<!--    animation loading-->
<div class="container">
    <div class="row">
        <div class="col-12" style="background-color: rgb(102, 95, 170); text-align: center">
            <h1 style="color: whitesmoke">Cart</h1>
        </div>
    </div>
    <div class="row">
        <div class="col" style="">
                <table class="table table-hover pt-10">
                    <thead>
                    <tr style="text-align: center">
                        <th scope="col">#</th>
                        <th scope="col">Image</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Total price</th>
                        <th scope="col">Action</th>
                    </tr>
                    </thead>
                    <tbody style="text-align: center">
                    <% for (let i=0; i<100;i++){ %>
                        <tr>
                            <th scope="row"><%= i %></th>
                            <th scope="row">
                                <img style="width: 5rem; height: 5rem" src="https://themewagon.com/wp-content/uploads/2022/09/screencapture-technext-github-io-cyborg-2022-09-12-12_59_27-2.png" alt="">
                            </th>
                            <td>Mark</td>
                            <td>$1</td>
                            <td>
                                <div class="btn-group" role="group" aria-label="Basic example">
                                    <button type="button" class="btn btn-secondary">-</button>
                                    <input type="text" style="text-align: center; vertical-align: middle; width: 3rem; border: none" value="1" readonly>
                                    <button type="button" class="btn btn-info">+</button>
                                </div>
                            </td>
                            <td>$2</td>
                            <td>
                                <button type="button" class="btn btn-warning">Delete</button>
                            </td>
                        </tr>
                    <% } %>
                    </tbody>
                </table>
        </div>
        <div class="col mb-5">
            <table class="table table-hover pt-10">
                <thead>
                <tr>
                    <th scope="col" colspan="3" style="text-align: center">Information Order</th>
                </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><h6>Order date</h6></td>
                        <td>Order date</td>
                    </tr>
                    <tr>
                        <td><h6>Delivery date</h6></td>
                        <td>Delivery date</td>
                    </tr>
                    <tr>
                        <td><h6>Delivery address</h6></td>
                        <td>Delivery address</td>
                    </tr>
                    <tr>
                        <td><h6>Total product price</h6></td>
                        <td>total product price</td>
                    </tr>
                    <tr>
                        <td><h6>Total delivery price</h6></td>
                        <td>total delivery price</td>
                    </tr>
                    <tr>
                        <td><h6>Total payment</h6></td>
                        <td>$123.123</td>
                    </tr>
                </tbody>
            </table>
            <div style="text-align: end">
                <input type="button" class="btn btn-success" value="Place order">
            </div>
        </div>
    </div>
</div>
</body>
</html>
