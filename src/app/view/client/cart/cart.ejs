<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>

    <link href="assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="css/client/cart.css" rel="stylesheet">

    <style>
        .waviy {
            position: relative;
        }
        .waviy span {
            position: relative;
            display: inline-block;
            font-size: 40px;
            color: #fff;
            text-transform: uppercase;
            animation: flip 2s infinite;
            animation-delay: calc(.2s * var(--i))
        }
        @keyframes flip {
            0%,80% {
                transform: rotateY(360deg)
            }
        }
    </style>
</head>
<body>
<div class="container">
    <div class="row" style="background-color: black; padding: 3rem 0 2rem 0;">
        <div class="col-sm-6">
            <a href="index.html"><img src="assets/images/logo.png" alt="logo"></a>
        </div>
        <div class="col-sm-3 col-sm-offset-3 text-center">
            <div class="waviy">
                <span style="--i:1">M</span>
                <span style="--i:2">Y</span>
                <span style="--i:3"></span>
                <span style="--i:4">C</span>
                <span style="--i:5">A</span>
                <span style="--i:6">R</span>
                <span style="--i:7">T</span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <table class="table" style="text-align: center">
                <thead>
                <tr >
                    <th scope="col" style="text-align: center">#</th>
                    <th scope="col" style="text-align: center">Product</th>
                    <th scope="col" style="text-align: center"></th>
                    <th scope="col" style="text-align: center">Price</th>
                    <th scope="col" style="text-align: center">Quantity</th>
                    <th scope="col" style="text-align: center">Total price</th>
                    <th scope="col" style="text-align: center">Action</th>
                </tr>
                </thead>
                <tbody>
                <% for(let i=1; i < 10;i++) {%>
                <tr>
                    <th scope="row"><%= i %></th>
                    <td>
                        <img class="img-product-cart" src="images/product/dog-duty.jpg" alt="">
                    </td>
                    <td style="vertical-align: middle">a</td>
                    <td style="vertical-align: middle"><%= i + "name" %></td>
                    <td style="vertical-align: middle">
                        <div class="btn-group" role="group" aria-label="Basic example">
                            <div type="button" class="btn btn-danger">-</div>
                            <div  class="btn">1</div>
                            <div type="button" class="btn btn-success">+</div>
                        </div>
                    </td>
                    <td style="vertical-align: middle"><%= i + "name" %></td>
                    <td style="vertical-align: middle"><div class="btn btn-danger">Delete</div></td>
                </tr>
                <% } %>
                </tbody>
            </table>
        </div>
        <div></div>
    </div>
    <div class="row">
        <div class="container-payment" style="background-color: red; width: 100%; height: 15rem; margin-bottom: 1rem">

        </div>
    </div>
</div>
</body>
</html>
